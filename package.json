{
    "name": "adnotatio",
    "version": "0.0.1",
    "description": "A library to handle inline annotations and comments (similar to Google Docs).",
    "main": "index.js",
    "scripts": {
        "build": "npm run build:devel && npm run build:prod",
        "build:devel": "rollup -c rollup.config.devel.js",
        "build:prod": "rollup -c rollup.config.prod.js",
        "dev": "rollup -w -c rollup.config.devel.js",
        "test": "echo \"Error: no test specified\" && exit 1",
        "pretest": "npm run build"
    },
    "author": "Matthew Wardrop",
    "license": "MIT",
    "dependencies": {
        "katex": "^0.10.0-rc.1",
        "react": "^16.5.2",
        "uuid": "^3.3.2"
    },
    "eslintConfig": {
        "extends": "react-app"
    },
    "browserslist": [
        ">0.2%",
        "not dead",
        "not ie <= 11",
        "not op_mini all"
    ],
    "files": [
        "dist",
        "index.js"
    ],
    "devDependencies": {
        "@babel/core": "^7.1.2",
        "@babel/plugin-proposal-class-properties": "^7.0.0-0",
        "@babel/preset-env": "^7.1.0",
        "@babel/preset-react": "^7.0.0",
        "less": "^3.8.1",
        "rollup": "^0.66.6",
        "rollup-plugin-babel": "^4.0.3",
        "rollup-plugin-node-resolve": "^3.4.0",
        "rollup-plugin-postcss": "^1.6.2",
        "rollup-plugin-uglify": "^6.0.0"
    },
    "peerDependencies": {
        "katex": "*"
    }
}
